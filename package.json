{
  "name": "fair-housing-pledge",
  "private": true,
  "author": {
    "name": "Paul Shryock",
    "email": "paul@pshry.com",
    "url": "https://pshry.com/"
  },
  "homepage": "https://fairhousingpledge.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Visual-Communications/fair-housing-pledge.git"
  },
  "bugs": {
    "url": "https://github.com/Visual-Communications/fair-housing-pledge/issues"
  },
  "scripts": {
    "start": "npm run build",
    "develop": "dotenv gulp develop",
    "serve": "npm run serve:server",
    "serve:client": "dotenv gulp serve",
    "serve:server": "node -r dotenv/config ./src/server/bin/www",
    "watch": "npm run watch:server & npm run watch:client",
    "watch:client": "dotenv gulp watch",
    "watch:server": "nodemon -r dotenv/config ./src/server/bin/www",
    "build": "dotenv gulp build",
    "production": "dotenv gulp production",
    "clear:cache": "heroku repo:purge_cache -a fair-housing-pledge && git commit --allow-empty -m \"Purge cache\" && git push heroku master"
  },
  "browserslist": [
    "defaults"
  ],
  "nodemonConfig": {
    "ignore": [
      "./_docs/*",
      "./_logs/*",
      "./build/*",
      "./modules/*",
      "./src/client/*"
    ],
    "delay": "2500",
    "watch": [
      "./src/server/*"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^0.19.2",
    "bcrypt": "^4.0.1",
    "compression": "^1.7.4",
    "config": "^3.3.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.1.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.22.0",
    "http-errors": "^1.7.3",
    "joi-password-complexity": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "liquidjs": "^9.12.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.16",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "serve-favicon": "^2.5.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.1.0",
    "chrome-launcher": "^0.13.2",
    "cssnano": "^4.1.10",
    "cypress": "^4.6.0",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-beautify": "^3.0.0",
    "gulp-cli": "^2.2.1",
    "gulp-concat": "^2.6.1",
    "gulp-connect": "^5.7.0",
    "gulp-html": "^3.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-standard": "^14.0.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-svgmin": "^2.2.0",
    "gulp-uglify": "^3.0.2",
    "js-yaml": "^3.14.0",
    "lighthouse": "^6.0.0",
    "merge-stream": "^2.0.0",
    "nodemon": "^2.0.4",
    "pixrem": "^5.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "precss": "^4.0.0",
    "stylelint": "^13.5.0",
