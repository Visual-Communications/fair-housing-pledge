{
  "name": "New-Project-Starter-Kit",
  "title": "New Project Starter Kit",
  "version": "0.24.0",
  "description": "Start new projects with Eleventy, webpack, Babel, StandardJS, Sass, PostCSS, PWA, service workers, and Netlify CMS installed and configured, with some common accessible HTML, CSS, and JS components and patterns. Includes deployment configuration for Netlify and Zeit Now. This starter kit is open source and completely free. Use it however you like.",
  "url": "https://newprojectstarterkit.com",
  "company": "Paul Shryock",
  "private": true,
  "scripts": {
    "start": "npm run build",
    "test": "npm-run-all lint debug",
    "lint": "npm run standard:fix",
    "debug": "npm run eleventy:debug",
    "audit": "npm run lighthouse",
    "watch": "npm run webpack:watch",
    "build": "npm-run-all clean webpack eleventy",
    "serve": "npm-run-all clean webpack eleventy:serve",
    "update": "ncu -u && npm update",
    "clean": "npm-run-all clean:*",
    "clean:css": "if [ -d src/css ]; then rm -R src/css; fi",
    "clean:dist": "if [ -d dist ]; then rm -R dist; fi",
    "clean:fonts": "if [ -d src/fonts ]; then rm -R src/fonts; fi",
    "clean:img": "if [ -d src/img ]; then rm -R src/img; fi",
    "clean:js": "if [ -d src/js ]; then rm -R src/js; fi",
    "lighthouse": "lighthouse http://localhost:8081 --budget-path=budget.json --view",
    "standard": "npx standard",
    "standard:fix": "npx standard --fix",
    "webpack": "npx webpack",
    "webpack:watch": "npx webpack --watch",
    "eleventy": "npx eleventy",
    "eleventy:debug": "DEBUG=Eleventy* npm run eleventy --dryrun",
    "eleventy:watch": "npx eleventy --watch",
    "eleventy:serve": "npx eleventy --serve",
    "now-build": "npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulshryock/New-Project-Starter-Kit.git"
  },
  "keywords": [],
  "author": {
    "name": "Paul Shryock",
    "email": "paul@pshry.com",
    "url": "https://pshry.com/"
  },
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/paulshryock/New-Project-Starter-Kit/issues"
  },
  "homepage": "https://github.com/paulshryock/New-Project-Starter-Kit#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.8.3",
    "@babel/core": "^7.4.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "autoprefixer": "^9.6.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.0.0",
    "cssnano": "^4.1.10",
    "file-loader": "^4.0.0",
    "html-minifier": "^4.0.0",
    "image-webpack-loader": "^5.0.0",
    "lighthouse": "^5.1.0",
    "mini-css-extract-plugin": "^0.7.0",
    "npm-run-all": "^4.1.5",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-node-sass": "^2.1.8",
    "postcss-preset-env": "^6.6.0",
    "precss": "^4.0.0",
    "standard": "^12.0.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  }
}
