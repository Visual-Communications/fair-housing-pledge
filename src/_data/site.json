{
  "title": "{{ pkg.title }}",
  "description": "{{ pkg.description }}",
  "url": "{{ pkg.url }}",
  "version": "{{ pkg.version }}",

  "feed": {
    "subtitle": "{{ pkg.title }}",
    "filename": "feed.xml",
    "path": "/feed/feed.xml",
    "url": "{{ pkg.url }}/feed/feed.xml",
    "id": "{{ pkg.url }}/"
  },

  "author": {
    "name": "{{ pkg.author.name }}",
    "email": "{{ pkg.author.email }}",
    "url": "{{ pkg.author.url }}"
  },

  "layout": "page",
  "body_class": "site",

  "copyright": "&copy {{ 'now' | date: '%Y' }} {{ pkg.title }}. All rights reserved."
}